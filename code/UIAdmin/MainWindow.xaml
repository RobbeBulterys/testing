                                                <Setter Property="FontSize" Value="20"/>
                                                <Setter Property="Foreground" Value="#e3b304"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Bezoeker" Width="auto" DisplayMemberBinding="{Binding Bezoeker.Naam}"/>
