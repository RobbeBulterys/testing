                            <!--Border: Lijst van alle onderstaande textboxen en hun styles voor het screen "Bezoek Opzoeken"-->
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="4" Height="40" Margin="5">
