                            <Button x:Name="BezoekOpzoekenAanpassenBtn" Content="Aanpassen" Grid.Column="5" Grid.Row="7" Margin="5" BorderBrush="Black" Background="#e3b304" BorderThickness="2" FontSize="24" Click="BezoekOpzoekenAanpassenBtn_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </DockPanel>
                </Grid>
            </DockPanel>
        </DockPanel>
    </DockPanel>
</Window>
