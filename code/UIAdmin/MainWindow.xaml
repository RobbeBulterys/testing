                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BezoekOpzoekenTextBoxEmail}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BezoekOpzoekenTextBoxNaam" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Naam" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BezoekOpzoekenTextBoxNaam}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BezoekOpzoekenTextBoxVoornaam" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Voornaam" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BezoekOpzoekenTextBoxVoornaam}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="4" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BezoekOpzoekenTextBoxBedrijfNaamBezoeker" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Bedrijf naam" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BezoekOpzoekenTextBoxBedrijfNaamBezoeker}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <!--ComboBox: Voor het weergeven van alle bedrijven voor het screen "Bezoek Opzoeken"-->
                            <ComboBox x:Name="BezoekOpzoekenComboBoxBedrijfNaam" VerticalAlignment="Center" Margin="5,0,5,0" Height="25" Grid.Column="2" Grid.Row="3" MinHeight="40" MaxHeight="60" Style="{StaticResource ComboBoxTest2}" FontSize="20" Foreground="#e3b304"/>
                            <!--ComboBox: Voor het weergeven van alle werknemers voor het screen "Bezoek Opzoeken"-->
                            <ComboBox x:Name="BezoekOpzoekenComboBoxContactPersoon" VerticalAlignment="Center" Margin="5,0,5,0" Height="25" Grid.Column="4" Grid.Row="3" MinHeight="40" MaxHeight="60" Grid.ColumnSpan="2" Style="{StaticResource ComboBoxTest2}" FontSize="20" Foreground="#e3b304"/>
                            <!--Button: Voor het verwijderen van een bezoek voor het screen "Bezoek Opzoeken"-->
                            <Button x:Name="BezoekOpzoekenVerwijderenBtn" Content="Verwijderen" Grid.Column="4" Grid.Row="7" Margin="5" BorderBrush="Black" Background="#e3b304" BorderThickness="2" FontSize="24" Click="BezoekOpzoekenVerwijderenBtn_Click">
