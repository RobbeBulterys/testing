<Window x:Class="UIAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIAdmin"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1200" SizeChanged="Window_SizeChanged">
    <DockPanel>
        <!--DockPanel: Keuzescherm (Bedrijf/Werknemer/Bezoeker/Bezoek)-->
        <DockPanel DockPanel.Dock="Top" Height="35" Background="Gray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="BedrijvenBtn" Content="Bedrijf" Grid.Column="0" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBtn_Click"/>
                <RadioButton x:Name="WerknemersBtn" Content="Werknemer" Grid.Column="1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBtn_Click"/>
                <RadioButton x:Name="BezoekersBtn" Content="Bezoeker" Grid.Column="2" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBtn_Click"/>
                <RadioButton x:Name="BezoekenBtn" Content="Bezoek" Grid.Column="3" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBtn_Click"/>
            </Grid>
        </DockPanel>
        <!--DockPanel: Extra Keuzescherm naargelang (Bedrijf/Werknemer/Bezoeker/Bezoek)-->
        <DockPanel x:Name="TopSecondDP" Background="#0c1c33">
            <DockPanel DockPanel.Dock="Top" Height="35" Visibility="Visible">
                <Grid>
                    <!--Grid definitie-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--DockPanel: Bedrijf top buttons-->
                    <DockPanel x:Name="BedrijfPanel" Visibility="Collapsed" Grid.Column="0" Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="BedrijfToevoegenBtn" Content="Bedrijf Toevoegen" Grid.Column="0" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                            <RadioButton x:Name="BedrijfOpzoekenBtn" Content="Bedrijf Opzoeken" Grid.Column="1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                            <RadioButton x:Name="ContractToevoegenBtn" Content="Contract Toevoegen" Grid.Column="2" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                            <RadioButton x:Name="ContractOpzoekenBtn" Content="Contract Opzoeken" Grid.Column="3" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                        </Grid>
                    </DockPanel>
                    <!--DockPanel: Werknemer top buttons-->
                    <DockPanel x:Name="WerknemerPanel" Visibility="Collapsed" Grid.Column="0" Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="WerknemerToevoegenBtn" Content="Werknemer Toevoegen" Grid.Column="0" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                            <RadioButton x:Name="WerknemerOpzoekenBtn" Content="Werknemer Opzoeken" Grid.Column="1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                        </Grid>
                    </DockPanel>
                    <!--DockPanel: Bezoeker top buttons-->
                    <DockPanel x:Name="BezoekerPanel" Visibility="Collapsed" Grid.Column="0" Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="BezoekerToevoegenBtn" Content="Bezoeker Toevoegen" Grid.Column="0" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                            <RadioButton x:Name="BezoekerOpzoekenBtn" Content="Bezoeker Opzoeken" Grid.Column="1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                        </Grid>
                    </DockPanel>
                    <!--DockPanel: Bezoek top buttons-->
                    <DockPanel x:Name="BezoekenPanel" Visibility="Collapsed" Grid.Column="0" Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="BezoekenToevoegenBtn" Content="Bezoek Toevoegen" Grid.Column="0" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                            <RadioButton x:Name="BezoekenOpzoekenBtn" Content="Bezoek Opzoeken" Grid.Column="1" Height="50" Foreground="White" FontSize="14" Style="{StaticResource MenuButtonTheme}" Checked="TopRowBedrijfBtn_Click"/>
                        </Grid>
                    </DockPanel>
                </Grid>
            </DockPanel>
            <!--DockPanel: Alle keuze schermen-->
            <DockPanel Background="#0c1c33">
                <Grid>
                    <!--Grid definitie-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--DockPanel: Bedrijf toevoegen scherm-->
                    <DockPanel x:Name="BedrijfToevoegenGridPanel" Visibility="Collapsed" Grid.Column="0" Grid.Row="0">
                        <Grid>
                            <!--Grid definitie-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" x:Name="BedrijfToevoegenGridPanelColumn0"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                            </Grid.RowDefinitions>
                            <!--TextBlock: Lijst van alle textblocken voor het screen "Bedrijf Toevoegen"-->
                            <TextBlock x:Name="BedrijfToevoegenTextBlockNaam" Text="Bedrijfs Naam:" FontSize="20" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0" Grid.Row="0" Foreground="#e3b304"/>
                            <TextBlock x:Name="BedrijfToevoegenTextBlockBTW" Text="BTW-Nummer:" FontSize="20" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0" Grid.Row="1" Foreground="#e3b304"/>
                            <TextBlock x:Name="BedrijfToevoegenTextBlockTelefoon" Text="Telefoon Nr:" FontSize="20" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0" Grid.Row="2" Foreground="#e3b304"/>
                            <TextBlock x:Name="BedrijfToevoegenTextBlockEmail" Text="Email:" FontSize="20" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0" Grid.Row="3" Foreground="#e3b304"/>
                            <TextBlock x:Name="BedrijfToevoegenTextBlockLand" Text="Land:" FontSize="20" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0" Grid.Row="4" Foreground="#e3b304"/>
                            <TextBlock x:Name="BedrijfToevoegenTextBlockstraat" Text="Straat en nr:" FontSize="20" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0" Grid.Row="5" Foreground="#e3b304"/>
                            <TextBlock x:Name="BedrijfToevoegenTextBlockPostcode" Text="Postcode en Plaats:" FontSize="20" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0" Grid.Row="6" Foreground="#e3b304"/>
                            <!--Border: Lijst van alle textboxen en hun styles voor het screen "Bedrijf Toevoegen"-->
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="4" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxNaam" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Bedrijf naam" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxNaam}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxBTW" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="BTW-nummer" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxBTW}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxTelefoon" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Telefoon nummer" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxTelefoon}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxEmail" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Email" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxEmail}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="4" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxLand" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Land" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxLand}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxstraat" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Straat" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxstraat}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxPostcode" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Postcode" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxPostcode}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="2" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxNr" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Nummer" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxNr}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <Border CornerRadius="10" Background="LightGray" Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="2" Height="40" Margin="5">
                                <Grid>
                                    <Rectangle StrokeThickness="1"/>
                                    <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfToevoegenTextBoxPlaats" FontSize="16"/>
                                    <TextBlock IsHitTestVisible="False" Text="Nummer" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=BedrijfToevoegenTextBoxPlaats}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <!--Button: Voor het toevoegen van een bedrijf voor het screen "Bedrijf Toevoegen"-->
                            <Button x:Name="BedrijfToevoegenToevoegBtn" Content="Toevoegen" Grid.Column="4" Grid.Row="8" Margin="5" 
                                    BorderBrush="Black" Background="#e3b304" BorderThickness="2" FontSize="24" Click="BedrijfToevoegenToevoegBtn_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </DockPanel>
                    <!--DockPanel: Bedrijf aanpassen scherm-->
                    <DockPanel x:Name="BedrijfOpzoekenGridPanel" Visibility="Collapsed" Grid.Column="0" Grid.Row="0">
                        <Grid>
                            <!--Grid definitie-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300" x:Name="BedrijfOpzoekenGridPanelColumn0"/>
                                <ColumnDefinition Width="200" x:Name="BedrijfOpzoekenGridPanelColumn1"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition MinHeight="50" MaxHeight="75"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5">
                                <!--Grid definitie-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <!--TextBlock: Lijst van alle filter textblocken voor het screen "Bedrijf Opzoeken"-->
                                <TextBlock Text="Filters:" FontWeight="Bold" FontSize="16" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="0" Grid.Row="0" Foreground="#e3b304"/>
                                <TextBlock Text="Naam:" FontWeight="Bold" FontSize="16" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="1" Grid.Row="0" Foreground="#e3b304"/>
                                <TextBlock Text="BTW-Nummer:" FontWeight="Bold" FontSize="16" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="3" Grid.Row="0" Foreground="#e3b304"/>
                                <TextBlock Text="Id:" FontWeight="Bold" FontSize="16" TextAlignment="left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="5" Grid.Row="0" Foreground="#e3b304"/>
                                <!--Border: Lijst van alle filter textboxen en hun styles voor het screen "Bedrijf Opzoeken"-->
                                <Border CornerRadius="10" Background="LightGray" Grid.Column="2" Grid.Row="0" Height="30" Margin="5">
                                    <Grid>
                                        <Rectangle StrokeThickness="1"/>
                                        <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfOpzoekenFilterTextBoxNaam" FontSize="14"/>
                                        <TextBlock IsHitTestVisible="False" Text="Bedrijf naam" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=BedrijfOpzoekenFilterTextBoxNaam}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                <Border CornerRadius="10" Background="LightGray" Grid.Column="4" Grid.Row="0" Height="30" Margin="5">
                                    <Grid>
                                        <Rectangle StrokeThickness="1"/>
                                        <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfOpzoekenFilterTextBoxBTW" FontSize="14"/>
                                        <TextBlock IsHitTestVisible="False" Text="BTW-nummer" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=BedrijfOpzoekenFilterTextBoxBTW}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                <Border CornerRadius="10" Background="LightGray" Grid.Column="6" Grid.Row="0" Height="30" Margin="5">
                                    <Grid>
                                        <Rectangle StrokeThickness="1"/>
                                        <TextBox Margin="1" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" Padding="5" Foreground="Black" x:Name="BedrijfOpzoekenFilterTextBoxId" FontSize="14"/>
                                        <TextBlock IsHitTestVisible="False" Text="Id nummer" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Black" Grid.Column="1">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=BedrijfOpzoekenFilterTextBoxId}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                <!--Button: Voor het filteren van alle bedrijven voor het screen "Bedrijf Opzoeken"-->
                                <Button x:Name="BedrijfOpvragenFilterBtn" Content="filter" Grid.Column="7" Grid.Row="0" Margin="5" Height="40" Padding="5,0,5,0"
                                    BorderBrush="Black" Background="#e3b304" BorderThickness="2" FontSize="20" VerticalAlignment="Center" Click="BedrijfOpvragenFilterBtn_Click">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="10"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                            <!--ListView: Voor het weergeven van alle bedrijven voor het screen "Bedrijf Opzoeken"-->
                            <ListView x:Name="ListviewBedrijfOpzoeken" Grid.RowSpan="9" Grid.Column="0" Grid.Row="1" FontSize="18" ItemsSource="{Binding werknemersList}" SelectionChanged="ListviewWerknemerOpzoeken_SelectionChanged" Background="Gray">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListViewItem}">
